<script>
    
    var shuttleForm = document.getElementById("shuttleForm");
    //shuttleForm.style.display = "none";
    

    function displayShuttleForm() {
        // Get the checkbox
        var checkBox = document.getElementById("shuttle_rider");
        // Get the output shuttleForm 
        var shuttleForm = document.getElementById("shuttleForm");

        var shutte_route = document.getElementById("shuttle_route");

        // If the checkbox is checked, display the output text
        if (checkBox.checked == true){
            shuttleForm.style.display = "block";
            shutte_route.required = true;
        } else {
            shuttleForm.style.display = "none";
            shutte_route.required = false;
        }
    }

    <% for(let i=0; i<canteen_form_list.length;i++) { %>
        <% if(i <= 14) { %>
            $('#<%= canteen_form_list[i].name %>').ionRangeSlider({
                min     : 0,
                max     : 5,
                type    : 'single',
                step    : 1,
                postfix : ' points',
                prettify: true,
                hasGrid : false,
                hideMinMax: true
            });  
        <% } %>     
    <% } %>

    <% for(let i=0; i<shuttle_form_list.length;i++) { %>
        <% if(i <= 14) { %>
            $('#<%= shuttle_form_list[i].name %>').ionRangeSlider({
                min     : 0,
                max     : 5,
                type    : 'single',
                step    : 1,
                postfix : ' points',
                prettify: true,
                hasGrid : false,
                hideMinMax: true
            });
        <% } %>
    <% } %>



</script>
