    <form id="canteen_and_shuttle_survey">
        <div class="row">
            <!-- Canteen form box -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header no-border bg-info">
                        <div class="d-flex justify-content-between">
                            <h3 class="card-title">Canteen Satisfaction Survey</h3>
                            <a href="#"></a>
                        </div>
                    </div>
                    <div class="card-body">
                        <% for(let i=0; i<canteen_form_list.length;i++) { %>
                            <% if(i <= 14){ %>
                            <div class="d-flex justify-content-between align-items-center border-bottom mb-3">
                                <p class="d-flex flex-column">
                                    <div class="col-md-6">
                                        <span class="text"><%= canteen_form_list[i].question %></span>
                                    </div>
                                </p>
                                <p class="text-xl  text-right">
                                    <div class="col-md-6">
                                        <input id="<%= canteen_form_list[i].name %>" type="text" name="<%= canteen_form_list[i].name %>" value="" style="display: none;">
                                    </div>
                                </p>
                            </div>
                            <% } %>
                        <% } %>

                        <% for(let i=0; i<canteen_form_list.length;i++) { %>
                            <% if(i > 14){ %>
                            <div class="d-flex justify-content-between align-items-center border-bottom mb-3">
                                <p class="d-flex flex-column">
                                    <div class="col-md-6">
                                        <span class="text"><%= canteen_form_list[i].question %></span>
                                    </div>
                                </p>
                                <p class="text-xl  text-right">
                                    <div class="col-md-6">
                                        <textarea id="<%= canteen_form_list[i].name %>" type="text" name="<%= canteen_form_list[i].name %>" class="form-control" value=""></textarea>
                                    </div>
                                </p>
                            </div>
                            <% } %>
                        <% } %>
                        
                        
                        <div class="d-flex flex-row justify-content-end">
                            <span class="mr-2 text-muted">
                            
                            </span>
                        </div>
                    </div>
                    
                    <!-- /.card-footer-->
                </div>

            </div>
            <!-- /.card -->

            <!-- Shuttle form box -->
            <div class="col-md-6" id="shuttleForm">
                <div class="card">
                    <div class="card-header no-border bg-warning">
                        <div class="d-flex justify-content-between">
                            <h3 class="card-title">Shuttle Satisfaction Survey (For Shuttle riders only)</h3>
                            <a href="#"></a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center border-bottom mb-3">
                            <p class="d-flex flex-column">
                                <div class="col-md-6">
                                    <span class="text">Shuttle Route:</span>
                                </div>
                            </p>
                            <p class="text-xl  text-right">
                                <div class="col-md-6">
                                    <select id="shuttle_route" type="text" name="shuttle_route" id="shuttle_route" value="" class="form-control">
                                        <option selected disabled></option>
                                        <% for(let i=0; i<shuttle_route_list.length; i++){ %>
                                            <option value="<%= shuttle_route_list[i] %>"><%= shuttle_route_list[i] %></option>
                                        <% } %>
                                    </select>
                                </div>
                            </p>
                        </div>
                        <div class="d-flex justify-content-between align-items-center border-bottom mb-3">
                            <p class="d-flex flex-column">
                                <div class="col-md-6">
                                    <span class="text">Shift Schedule</span>
                                </div>
                            </p>
                            <p class="text-xl  text-right">
                                <div class="col-md-6">
                                    <input id="shift" type="text" name="shift" value="<%= user_details.shift %>" disabled  class="form-control">
                                </div>
                            </p>
                        </div>
                        <div class="d-flex justify-content-between align-items-center border-bottom mb-3">
                            <p class="d-flex flex-column">
                                <div class="col-md-6">
                                    <span class="text">Shuttle/ Bus Marshall (Optional)</span>
                                </div>
                            </p>
                            <p class="text-xl  text-right">
                                <div class="col-md-6">
                                    <input id="shuttle_bus_marshall" type="text" name="shuttle_bus_marshall" value=""  class="form-control">
                                </div>
                            </p>
                        </div>
                        <% for(let i=0; i<shuttle_form_list.length;i++) { %>
                            <% if(i <= 14){ %>
                            <div class="d-flex justify-content-between align-items-center border-bottom mb-3">
                                <p class="d-flex flex-column">
                                    <div class="col-md-6">
                                        <span class="text"><%= shuttle_form_list[i].question %></span>
                                    </div>
                                </p>
                                <p class="text-xl  text-right">
                                    <div class="col-md-6">
                                        <input id="<%= shuttle_form_list[i].name %>" type="text" name="<%= shuttle_form_list[i].name %>" value="" style="display: none;">
                                    </div>
                                </p>
                            </div>
                            <% } %>
                        <% } %>
                        <% for(let i=0; i<shuttle_form_list.length;i++) { %>
                            <% if(i > 14){ %>
                            <div class="d-flex justify-content-between align-items-center border-bottom mb-3">
                                <p class="d-flex flex-column">
                                    <div class="col-md-6">
                                        <span class="text"><%= shuttle_form_list[i].question %></span>
                                    </div>
                                </p>
                                <p class="text-xl  text-right">
                                    <div class="col-md-6">
                                        <textarea id="<%= shuttle_form_list[i].name %>" type="text" name="<%= shuttle_form_list[i].name %>" value="" class="form-control"></textarea>
                                    </div>
                                </p>
                            </div>
                            <% } %>
                        <% } %>
                        
                        <div class="d-flex flex-row justify-content-end">
                            <span class="mr-2 text-muted">
                                
                            </span>
                        </div>
                    </div>
                    
                    <!-- /.card-footer-->
                </div>

            </div>
            <!-- /.card -->      
        </div>  
        <div clas="row">
            <div class="col-md-12">
                <div class="card"">
                    <div class="card-body">
                        <div id='responseDiv'>
                            <!-- response here-->
                        </div>
                        <div id="toHideIfSuccess">
                            <div class="row">
                                <div class="col-md-12" style="padding-bottom: 20px;">
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" name="anonymous_submission" id="anonymous_submission" value="Yes"/>
                                        <label class="form-check-label" for="anonymous_submission">I am submitting this survey <u title="adverb: in a way that prevents a person from being identified by name.">anonymously</u> and prefer the use of my shift and department information instead.</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <button type="submit" id="submitsurveyform" class="btn btn-block btn-outline-warning btn-lg">Submit Survey</button>
                                    <p class="text-muted" style="padding-top: 10px;">
                                        By submitting the survey, you accept that HR Services will use your <u title="employee number or shift and department">selected</u> information to track and filter the data for the improvement of our canteen and shuttle services.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <% } else { %>
    <div class="row">
        <div class="col-md-12">
            <div class="card-body">
                <p>Oops. You have already completed the survey. Thank you! üèÜ <a href="/logout">logout</a> </p> 
            </div>
        </div>
    </div>
    <% } %>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

